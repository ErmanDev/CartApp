<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="20dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="REQUEST"
                android:textColor="#FFFF00"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/lineTextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="2dp"
                android:text="LINE 1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textFontWeight="900" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FFFF00"
                android:text="PENDING"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/cardsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#222222"
                    android:padding="8dp">

                </LinearLayout>
            </ScrollView>

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#444444" />

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/utilityLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#222222"
                    android:padding="8dp">

                </LinearLayout>
            </ScrollView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:background="#111111">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/line1Btn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="LINE 1"
                    android:textSize="14sp"
                    android:background="#FFF" />

                <Button
                    android:id="@+id/line2Btn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="LINE 2"
                    android:textSize="14sp"
                    android:background="#FFF" />

                <Button
                    android:id="@+id/line3Btn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="LINE 3"
                    android:textSize="14sp"
                    android:background="#FFF" />

                <Button
                    android:id="@+id/line4Btn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="LINE 4"
                    android:textSize="14sp"
                    android:background="#FFF" />

                <Button
                    android:id="@+id/line5Btn"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="LINE 5"
                    android:textSize="14sp"
                    android:background="#FFF" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="8dp">

                <!-- Item Buttons Grid -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="24dp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="2"
                        android:alignmentMode="alignMargins"
                        android:useDefaultMargins="true">

                        <Button
                            android:id="@+id/btnCoop"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="COOP"
                            android:textSize="16sp"
                            android:background="#FFF" />

                        <Button
                            android:id="@+id/btnCard"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="CARD"
                            android:textSize="16sp"
                            android:background="#FFF" />

                        <Button
                            android:id="@+id/btnTape"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="TAPE"
                            android:textSize="16sp"
                            android:background="#FFF" />

                        <Button
                            android:id="@+id/btnCrayon"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="CRAYON"
                            android:textSize="16sp"
                            android:background="#FFF" />

                        <Button
                            android:id="@+id/btnBlade"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="BLADE"
                            android:textSize="16sp"
                            android:background="#FFF" />

                        <Button
                            android:id="@+id/btnRubberBond"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="RUBBER BOND"
                            android:textSize="16sp"
                            android:background="#FFF" />
                    </GridLayout>
                </LinearLayout>

                <!-- Quantity with plus/minus controls -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quantity:"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:paddingLeft="4dp"
                        android:paddingBottom="2dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <Button
                            android:id="@+id/decreaseBtn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="-"
                            android:textSize="24sp"
                            android:padding="0dp"
                            android:background="#FFF" />

                        <TextView
                            android:id="@+id/qtyDisplay"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:background="#222222"
                            android:layout_marginHorizontal="4dp" />

                        <Button
                            android:id="@+id/increaseBtn"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="+"
                            android:textSize="24sp"
                            android:padding="0dp"
                            android:background="#FFF" />
                    </LinearLayout>

                    <!-- Send Button -->
                    <Button
                        android:id="@+id/sendBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="SEND REQUEST"
                        android:background="#00FF00"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:padding="12dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>